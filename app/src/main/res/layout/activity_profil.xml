<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/bg_gradient"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:text="PROFIL"/>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@color/white"
                    android:padding="20dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/profil"
                        android:background="@drawable/bg_ui"/>

                    <TextView
                        android:id="@+id/id_pprofesi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="profesi"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:id="@+id/id_Pnama"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:drawableLeft="@drawable/ic_person_black_normal"
                        android:drawablePadding="5dp"
                        android:textSize="20dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/black" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/black"/>
                    <TextView
                        android:id="@+id/id_Pemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="E-mail"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:drawableLeft="@drawable/ic_email_black_24dp"
                        android:drawablePadding="5dp"
                        android:textSize="20dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/black"/>
                    <TextView
                        android:id="@+id/id_Pphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:drawableLeft="@drawable/ic_phone_black_24dp"
                        android:drawablePadding="5dp"
                        android:textSize="20dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="50dp"
                        android:background="@color/black"/>
                    <Button
                        android:id="@+id/btn_edit_profil"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_ui"
                        android:text="Edit Profil"
                        android:textColor="@color/white"/>
                    <Button
                        android:id="@+id/btn_loguot"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="@color/gradientstart"
                        android:text="Log Out"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>
