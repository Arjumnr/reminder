<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_gradient"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/ic_back"
            android:layout_width="40dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_arrow_back_black"
            android:layout_gravity="left"
            app:tint="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_margin="25dp"
                android:padding="20dp">
                <ImageView
                    android:id="@+id/img_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/logo_singup" />


                <TextView
                    android:layout_marginVertical="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JADWAL"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="20dp"/>

                <TextView
                    android:drawableStart="@drawable/ic_customer_service"
                    android:id="@+id/mhs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="Nama Dosen"/>
                <TextView
                    android:drawableStart="@drawable/ic_timedate"
                    android:drawablePadding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="Tanggal Pertemuan"/>
                <TextView
                    android:drawableStart="@drawable/ic_timedate"
                    android:drawablePadding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="Waktu Pertemuan"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ui"
                    android:layout_marginTop="10dp"
                    android:text="SAVE"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jm"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/tolak"
                        android:layout_width="100sp"
                        android:layout_height="46sp"
                        android:layout_marginLeft="16sp"
                        android:layout_marginRight="16sp"
                        android:text="TOLAK"
                        android:background="@color/abu"
                        android:textColor="@color/white"
                        android:layout_gravity="center"/>

                    <Button
                        android:id="@+id/terima"
                        android:layout_width="100sp"
                        android:layout_height="46sp"
                        android:layout_marginLeft="16sp"
                        android:layout_marginRight="16sp"
                        android:text="TERIMA"
                        android:background="#E60E57"
                        android:textColor="#F7F8F8"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>