<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_gradient"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/ic_back"
            android:layout_width="40dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_arrow_back_black"
            android:layout_gravity="left"
            app:tint="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_margin="25dp"
                android:padding="20dp">
                <ImageView
                    android:id="@+id/img_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/logo_singup" />


                <TextView
                    android:layout_marginVertical="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INPUT JADWAL"
                    android:textColor="@drawable/bg_ui"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_gradient">
                        <TextView
                            android:id="@+id/id_SPdosen"
                            android:drawableStart="@drawable/ic_customer_service"
                            android:drawablePadding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Nama Dosen : "
                            android:textSize="17dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                        <Spinner
                            android:id="@+id/id_naDosen_dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:drawableStart="@drawable/ic_timedate"
                    android:drawablePadding="5dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_gradient"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Masukkan  "/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Pertemuan"
                        android:textColor="@color/abu"
                        android:id="@+id/id_date" />
                    <TextView
                        android:textSize="18sp"
                        android:paddingTop="15dp"
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/abu"
                        android:text="Waktu Pertemuan"
                        android:id="@+id/id_time" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ui"
                    android:layout_marginTop="20dp"
                    android:text="SAVE"
                    android:textSize="20sp"
                    android:id="@+id/id_btn_save"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />
